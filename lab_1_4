using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Lab_1
{
    class Program
    {
        static void Main(string[] args)
        {
            int PlayerCard = 0;
            int DealerCard = 0;

            Random random = new Random();

            PlayerCard += random.Next(1, 12);
            DealerCard += random.Next(1, 12);

            if (PlayerCard > 21)
            {
                PlayerCard -= 10;
            }

            DealerCard += random.Next(1, 12);
            DealerCard += random.Next(1, 12);

            if (DealerCard > 21)
            {
                DealerCard -= 10;
            }

            while (true)
            {
                if (PlayerCard == 21)
                {
                    Console.WriteLine("Количество очков игрока: = 21");
                    break;
                }
                Console.WriteLine("Мое кол-во очков: " + PlayerCard.ToString() + ". Взять еще карту?");

                string answer = Console.ReadLine();

                if (answer == "да")
                {
                    PlayerCard += random.Next(1, 12);
                    if (PlayerCard > 21)
                    {
                        Console.WriteLine("Ты проиграл(");
                        break;
                    }
                    else
                    {
                        continue;
                    }
                }
                else if (answer == "нет")
                {
                    break;
                }
                else
                {
                    Console.WriteLine("Неправильный ввод, ввести можно только (да) или (нет).");
                    continue;
                }
            }

            Console.WriteLine("\n");
            Console.WriteLine("----------------------------------");

            Console.WriteLine("Количество очков игрока: " + PlayerCard.ToString());
            Console.WriteLine("Количество очков крупье: " + DealerCard.ToString());

            if (PlayerCard <= 21)
            {
                while (DealerCard < 21 && DealerCard < PlayerCard)
                {
                    DealerCard += random.Next(1, 12);
                }

                if (PlayerCard == DealerCard)
                {
                    Console.WriteLine("Игрок и Крупье сыграли вничью");
                }

                else if (PlayerCard < DealerCard && DealerCard <= 21)
                {
                    Console.WriteLine("Крупье победил");
                }
                else if (DealerCard > 21)
                {
                    Console.WriteLine("Крупье проиграл, игрок выиграл");
                }
                else if (DealerCard == 21)
                {
                    Console.WriteLine("Крупье выиграл");
                }
            }
            else
            {
                Console.WriteLine("Крупье выиграл");
            }
            Console.ReadLine();
        }
    }
}
